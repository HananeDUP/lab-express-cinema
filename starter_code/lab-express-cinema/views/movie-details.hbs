<div>
    <img src={{movie.image}}>
    <h2>{{movie.title}}</h2>
    <h3>Director: {{movie.director}}</h3>
    <ul>
        {{#each movie.stars}}
        <li>{{this}}</li>
        {{/each}}
    </ul>
    <p>{{movie.description}}</p>
    <p>
        {{#each movie.showtimes}}
            <span>{{this}}|</span>
        {{/each}}

    </p>
    <a href="/movies">back to the list</a>
</div>

